

{% extends "../layout.njk" %}

{% block content %}

<div class="menu-chefe">
  <h2 class="title-chef">Criando Chefe</h2>
  <div class="buttons">
    <button type="submit" form="create">Salvar Chefe</button>
  </div>
</div>

<form method="POST" id="create" action="/admin/chefs">

  <div class="inputs-chefe-create">
    <div class="input-block">
      <label for="name">Nome</label>
      <div>
        <input type="text" name="name" placeholder="Nome do chefe" value="">
      </div>
    </div>
  </div>

  <div class="inputs-chefe-create">
    <div class="input-block">
      <label for="avatar_url">Avatar</label>
      <div>
        <input type="url" name="avatar_url" placeholder="http://..." value="">
      </div>
    </div>
  </div>

</form>


{% endblock content %}
