

{% extends "../layout.njk" %}

{% block content %}

<div class="menu">
  <h2 class="title">Editando Chefe</h2>
  <div class="buttons-edit-page">
    <button type="submit" form="delete" class="delete-button">Deletar</button>
    <button type="submit" form="salve">Salvar Chefe</button>
  </div>
</div>

<form method=POST id="salve" action="/chefs?_method=PUT">

  {% include 'chefs/fields.njk' %}
  <input type="hidden" name="id" value="{{chef.id}}">

</form>

<form method="POST" id="delete" action="/chefs?_method=DELETE">
  <input type="hidden" name="id" value="{{chef.id}}">
</form>

{% endblock content %}
