
{% extends "../layout.njk" %}

{% block head %}
  <script src="/add_button.js" defer></script>
{% endblock head %}

{% block content %}

  <section class="uniq_recipe">

    <div class="menu">
      <h2 class="title">Criando Receita</h2>
      <div class="buttons">
        <button type="submit" form="create">Salvar Receita</button>
      </div>
    </div>

    <form method="POST" id="create" action="/recipes">

      <div class="editRecipeContent">

        <div class="input-block">
          <label for="image">Imagem da receita</label>
          <div>
            <input type="url" name="image" placeholder="http://..."
            value="{{recipe.image}}">
          </div>
        </div>

        <div class="input-block">
          <label for="chef_id">Chef</label>
          <div>
            <select name="chef_id">
              {% for chef in chefOption %}
                <option value="{{chef.id}}" {% if recipe.chef_id == chef.id %} selected {% endif %}>{{chef.name}}</option>
              {%endfor%}
            </select>
          </div>
        </div>

        <div class="input-block">
          <label for="title">Nome da receita</label>
          <div>
            <input type="text" name="title" placeholder="Nome da receita"
            value="{{recipe.title}}">
          </div>
        </div>

        <div class="input-block">
          <label for="ingredients">Ingredientes</label>
          <div id="ingredients">
            <div class="ingredient">
              <input type="text" name="ingredients[]" placeholder="Digite o ingrediente..." value="">
            </div>
          </div>
          <button type="button" class="add-ingredient">Adicionar novo ingrediente</button>
        </div>

        <div class="input-block">
          <label for="preparation">Modo de preparo</label>
          <div id="preparation">
            <div class="preparation">
              <input type="text" name="preparation[]" placeholder="Digite o passo para preparo..." value="">
            </div>
          </div>
          <button type="button" class="add-steps">Adicionar novo passo</button>
        </div>

        <div class="input-block">
          <label for="information">Informações adicionais</label>
          <div>
            <div>
              <textarea name="information">
                {{recipe.information}}
              </textarea>
            </div>
          </div>
        </div>

      </div>

    </form>

  </section>


{% endblock content %}
